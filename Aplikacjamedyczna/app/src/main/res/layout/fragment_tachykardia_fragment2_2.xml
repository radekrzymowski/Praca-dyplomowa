<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.radon.aplikacjamedyczna.Algorytmy.TachykardiaFragments.TachykardiaFragment2_2">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/algorytmTachykardia_2_2"
        android:id="@+id/textView_tachykardia"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIESTABILNY"
        android:id="@+id/buttonYes"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonYes"
        android:layout_below="@+id/textView_tachykardia"
        android:background="@drawable/buttons_in_algorithms"
        android:textColor="@color/white_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STABILNY"
        android:id="@+id/buttonNo"
        android:onClick="buttonNo"
        android:background="@drawable/buttons_in_algorithms"
        android:textColor="@color/white_color"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/buttonYes"
        android:layout_alignEnd="@+id/textView_tachykardia" />

</RelativeLayout>
