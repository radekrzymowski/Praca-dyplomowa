<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffff">

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Kalkulatory"
        android:id="@+id/button_kalkulatory"
        android:onClick="open_kalkulatory_function"
        android:textColor="#ffffff"
        android:background="@drawable/kalkulatory_button_shape"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/button_skale"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textAlignment="center"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Skale"
        android:id="@+id/button_skale"
        android:onClick="open_skale_function"
        android:textColor="#ffffff"
        android:background="@drawable/skale_button_shape"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/button_algorytmy"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textAlignment="gravity"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Algorytmy"
        android:id="@+id/button_algorytmy"
        android:onClick="open_algorytmy_function"
        android:textColor="#ffffff"
        android:background="@drawable/algorytmy_button_shape"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:textSize="25dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aplikacja medyczna"
        android:id="@+id/main_activity_title"
        android:layout_marginTop="120dp"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
