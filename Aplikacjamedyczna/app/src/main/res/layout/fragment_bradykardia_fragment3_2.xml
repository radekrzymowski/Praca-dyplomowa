<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.radon.aplikacjamedyczna.Algorytmy.BradykardiaFragments.BradykardiaFragment1_1">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/algorytmBradykardia_3_2"
        android:id="@+id/textView_bradykardia"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAK"
        android:id="@+id/buttonYes"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonYes"
        android:layout_below="@+id/textView_bradykardia"
        android:background="@drawable/buttons_in_algorithms"
        android:textColor="@color/white_color"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIE"
        android:id="@+id/buttonNo"
        android:layout_alignBottom="@+id/buttonYes"
        android:layout_alignParentEnd="true"
        android:onClick="buttonNo"
        android:layout_below="@+id/textView_bradykardia"
        android:background="@drawable/buttons_in_algorithms"
        android:textColor="@color/white_color"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
